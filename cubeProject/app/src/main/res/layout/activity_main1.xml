<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lay1"
    tools:context=".MainActivity11">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="583dp"
        android:layout_height="262dp"
        android:layout_marginBottom="212dp"
        android:text="Первый день всегда непростой, но всем нам казалось, что время пролетит быстро. Было торжественное открытие. Все распределились по командам: первая команда - Космические Adminы, вторая - Pythonавты, a третья - IT-творцы. На занятиях ученики знакомились с программмами, а потом проводилось закрытие дня."
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="240dp"
        android:layout_height="88dp"
        android:layout_marginBottom="8dp"
        android:text="День 1"
        android:textSize="69sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="593dp"
        android:layout_height="279dp"
        android:layout_marginBottom="100dp"
        android:text="На этом самом закрытии проводился конкурс - учащимся нужно было найти 8 карточек определённого цвета (у каждой команды свой) и собрать их в единую карту космоса. Первыми справились Pythonaвты, вторыми - космические Adminы, а затем и IT-творцы. Все были довольны и в завершение дня провели флешмоб. Вот и подошёл к концу первый день наших образовательных каникул."
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="281dp"
        android:layout_height="179dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.515"
        app:srcCompat="@drawable/img_20220610_121029_skatova" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="277dp"
        android:layout_height="177dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:srcCompat="@drawable/img_20220610_121058_otkr" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="назад"
        android:backgroundTint="#00a693"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="324dp"
        android:text="дальше"
        android:backgroundTint="#00a693"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>